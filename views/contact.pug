extends base.pug
block script
 script(src="/static/index.js")
block style
 style
      include ../static/style.css
      include ../static/styleContact.css
block body
        div.container
               h1 Contact Us
                form(action="/contact", method="post", class="myForm", onsubmit="return validateForm()")
                   input(type="text", class="myInput", name="name", placeholder="Enter your name") 
                   input(type="phone", class="myInput", name="phone", placeholder="Enter your number") 
                   input(type="email", class="myInput", name="email", placeholder="Enter your email") 
                   input(type="address", class="myInput", name="address", placeholder="Enter your adress") 
                   input(type="desc", class="myInput", name="desc", placeholder="Enter your interest")
                   button(class='btn')
                       | SUBMIT 